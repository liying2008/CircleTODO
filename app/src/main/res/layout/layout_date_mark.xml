<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="已选择标记"
        android:textColor="@color/md__defaultBackground"
        android:textSize="16sp" />

    <lxy.liying.circletodo.view.ListViewForScrollView
        android:id="@+id/lvDateMarkSelected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvSelectMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="没有已选择标记"
        android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="4dp"
        android:background="@color/holo_green_light" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="可选择标记"
        android:textColor="@color/md__defaultBackground"
        android:textSize="16sp" />

    <lxy.liying.circletodo.view.ListViewForScrollView
        android:id="@+id/lvDateMarkRemain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvRemainMsg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="没有可选择标记"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/llAddColor"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:background="@drawable/selector_add_color"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:drawableLeft="@drawable/add_mark_selector"
            android:drawablePadding="5dp"
            android:gravity="center"
            android:text="增加新标记"
            android:textColor="@color/about_text_left_selector" />
    </LinearLayout>

</LinearLayout>
