<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_bg"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivHeadIcon"
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:src="@drawable/unlogin"
        android:layout_gravity="center_horizontal"
        app:civ_border_color="@color/border_color"
        android:clickable="true"
        android:onClick="openPersonalPage"
        app:civ_border_width="2dp"/>

    <TextView
        android:id="@+id/tvCurrUserName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/nav_header_vertical_spacing"
        android:text="未登录"
        android:textColor="@color/header_name"
        android:gravity="center_horizontal"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/tvCurrEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击头像登录"
        android:textColor="@color/header_email"
        android:layout_gravity="center_horizontal"/>

</LinearLayout>
